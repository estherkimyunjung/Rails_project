
<%=form_with model: @review do |f|%>
    <%=f.label :Date_of_visit%>
    <%=f.date_field :date%> <br><br>
    <%=f.label :Restaurant_Name%>
    <%=f.collection_select :restaurant_id, @restautants, :id, :name%> <br><br>
    <%=f.label :Location%>
    <%=f.collection_select :location_id, @locations, :id, :address%> <br><br>
    <%=f.label :comment%>
    <%=f.text_area :comment%> <br><br>
    <%=f.label :Rating%>
    <%=f.label 'Rating', '1' %>
    <%=f.radio_button :rating, true %>
    <%=f.label 'Rating', '2' %>
    <%=f.radio_button :rating, false %>
    <%=f.label 'Rating', '3' %>
    <%=f.radio_button :rating, false %>
    <%=f.label 'Rating', '4' %>
    <%=f.radio_button :rating, false %>
    <%=f.label 'Rating', '5' %>
    <%=f.radio_button :rating, false %> <br><br>
<%=f.submit%>
<%end%>
