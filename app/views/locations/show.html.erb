<!DOCTYPE html>
<html>
	<head>
		<title>Yelppy_Rails_project</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="assets/css/main.css" />
    	<style>
            .inner {
                background-color: #F0960D;
            }
			a {
				text-decoration: underline;
				color: #19B5FE;
			}

			a:hover {
				text-decoration: none;
				color: #019be3;
			}

            .flex-container {
                display: flex;
                justify-content: center;
                background-color: none;
            }

            .flex-container > div {
                background-color: #f1f1f1;
                margin: 10px;
                padding: 17px;
            }

            .btn {
                color: green;
                font-size: 1.25em;
                text-align: center;
                padding: 14px 40px;
                text-decoration: none;
            }

            .btn:hover {
            background: #ddd;
            color: black;
            }

            em {
                font-size: 1.15em;
            }
  
            .center_box {

                margin-right: 150px;
                margin-left: 150px;
            }

			h2, h3{
                font-size: 2em;
				color: green;
				text-align: center;
            }
            h3 {
                font-size: 1.35em;
            }
            
    	</style>
	</head>
	<body>
		<section id="main">
            <%= form_with url: '/logout', method: "delete" do |f|%>
            <div class="flex-container">
                <div><%= link_to " Foods list",  foods_path, class: "btn btn-inverse"%></div>
                <div><%= link_to " Restaurants",  restaurants_path, class: "btn btn-inverse"%></div>
                <div><%= link_to " Restaurant Review",  reviews_path, class: "btn btn-inverse"%></div>
                <div><%= link_to " Create Review",  new_review_path, class: "btn btn-inverse"%></div>&nbsp;&nbsp;&nbsp;
                <div> <em><%= link_to @user.name, @user%></em> &nbsp; <%= f.submit "Logout"%></div>
           </div>
            <%end%> 
		<!-- Main -->
			<section id="main">
				<!-- Banner -->
				<section id="banner">
					<div class="inner">
                    <br><h2><%= @location.restaurant.name%> Information</h2>
                    <img src="<%=@location.restaurant.img_url%>" alt="<%=@location.restaurant.name%>"> <br>
                    <h3> Address: <%=@location.address%> </h3><br>
                    <h4><%= link_to " Go Back to Restaurant Info",  restaurant_path(@location.restaurant)%></h4> 
                    </div>
            	</section>
            </section>
        </div>
	</body>
</html>
