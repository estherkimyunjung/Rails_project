<% if flash[:errors]%>
    <% flash[:errors].each do |e| %>
        <li style="color: purple">
            <%= e %>
        </li>
        <%end%>
<%end%>

<%= form_with model: @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :user_name %>
  <%= f.text_field :user_name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.submit "create" %>
<% end %>
